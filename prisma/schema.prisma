generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ChannelType {
  TEXT
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
  CANCELED
}

model User {
  id           String       @id @default(cuid())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  presenceStatus PresenceStatus @default(ONLINE)
  lastSeenAt     DateTime?      @default(now())

  username     String       @unique
  passwordHash String

  memberships  Membership[]
  serversOwned Server[]     @relation("ServerOwner")
  messages     Message[]

  invitesCreated Invite[]   @relation("InviteCreator")

  friendRequestsSent     FriendRequest[] @relation("FriendRequestFrom")
  friendRequestsReceived FriendRequest[] @relation("FriendRequestTo")

  friendshipsA Friendship[] @relation("FriendshipA")
  friendshipsB Friendship[] @relation("FriendshipB")

  dmThreadsA DmThread[] @relation("DmThreadA")
  dmThreadsB DmThread[] @relation("DmThreadB")
  dmMessages DmMessage[]

  messageReactions   MessageReaction[]
  dmMessageReactions DmMessageReaction[]

  auditLogs AuditLog[]

  updatedSiteConfigs SiteConfig[]
}

enum PresenceStatus {
  ONLINE
  IDLE
  OFFLINE
}

model Server {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  name        String

  ownerId     String
  owner       User         @relation("ServerOwner", fields: [ownerId], references: [id])

  memberships Membership[]
  channels    Channel[]

  invites     Invite[]
}

model Invite {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  code      String   @unique

  serverId  String
  server    Server   @relation(fields: [serverId], references: [id])

  creatorId String
  creator   User     @relation("InviteCreator", fields: [creatorId], references: [id])

  @@index([serverId, createdAt])
}

model Membership {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())

  role      MemberRole @default(MEMBER)

  userId    String
  user      User       @relation(fields: [userId], references: [id])

  serverId  String
  server    Server     @relation(fields: [serverId], references: [id])

  @@unique([userId, serverId])
}

model Channel {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  name      String
  type      ChannelType @default(TEXT)

  serverId  String
  server    Server      @relation(fields: [serverId], references: [id])

  messages  Message[]

  @@unique([serverId, name])
}

model Message {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  editedAt  DateTime?
  deletedAt DateTime?
  pinnedAt  DateTime?
  pinnedById String?

  content   String

  replyToId String?
  replyTo   Message? @relation("MessageReplies", fields: [replyToId], references: [id])
  replies   Message[] @relation("MessageReplies")

  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id])

  authorId  String
  author    User     @relation(fields: [authorId], references: [id])

  reactions MessageReaction[]

  @@index([channelId, createdAt])
}

model MessageReaction {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  emoji     String

  messageId String
  message   Message  @relation(fields: [messageId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@unique([messageId, userId, emoji])
  @@index([messageId, createdAt])
}

model AuditLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  action    String
  meta      Json?

  actorId   String?
  actor     User?    @relation(fields: [actorId], references: [id])

  @@index([createdAt])
  @@index([action, createdAt])
}

model SiteConfig {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  lockdownEnabled Boolean  @default(false)
  lockdownMessage String   @default("The site is temporarily locked down.")

  updatedById     String?
  updatedBy       User?    @relation(fields: [updatedById], references: [id])
}

model FriendRequest {
  id        String              @id @default(cuid())
  createdAt DateTime            @default(now())
  status    FriendRequestStatus @default(PENDING)

  fromId String
  from   User @relation("FriendRequestFrom", fields: [fromId], references: [id])

  toId String
  to   User @relation("FriendRequestTo", fields: [toId], references: [id])

  @@unique([fromId, toId])
  @@index([toId, status, createdAt])
}

model Friendship {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userAId String
  userA   User @relation("FriendshipA", fields: [userAId], references: [id])

  userBId String
  userB   User @relation("FriendshipB", fields: [userBId], references: [id])

  @@unique([userAId, userBId])
  @@index([userAId, createdAt])
}

model DmThread {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userAId String
  userA   User @relation("DmThreadA", fields: [userAId], references: [id])

  userBId String
  userB   User @relation("DmThreadB", fields: [userBId], references: [id])

  messages DmMessage[]

  @@unique([userAId, userBId])
  @@index([userAId, createdAt])
}

model DmMessage {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  editedAt  DateTime?
  deletedAt DateTime?
  pinnedAt  DateTime?
  pinnedById String?
  content   String

  replyToId String?
  replyTo   DmMessage? @relation("DmMessageReplies", fields: [replyToId], references: [id])
  replies   DmMessage[] @relation("DmMessageReplies")

  threadId String
  thread   DmThread @relation(fields: [threadId], references: [id])

  authorId String
  author   User @relation(fields: [authorId], references: [id])

  reactions DmMessageReaction[]

  @@index([threadId, createdAt])
}

model DmMessageReaction {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  emoji     String

  messageId String
  message   DmMessage @relation(fields: [messageId], references: [id])

  userId    String
  user      User      @relation(fields: [userId], references: [id])

  @@unique([messageId, userId, emoji])
  @@index([messageId, createdAt])
}
